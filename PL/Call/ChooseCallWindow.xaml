<Window x:Class="PL.Call.ChooseCallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Call"
        mc:Ignorable="d"
        Title="Choose Call" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left">
            <TextBlock Text="Your current address: " FontWeight="Bold" Margin="0,0,5,0"/>
            <TextBox Text="{Binding CurrentVolunteer.FullAddress, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Width="200" Margin="0,0,10,0" VerticalAlignment="Center"/>
            <Button Content="Update Address" Click="Updete_click"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10">
            <Label Content="Choose call type:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox Width="150"
                      ItemsSource="{Binding Source={StaticResource TypeOfCallCollectionKey}}"
                      SelectedItem="{Binding Type, RelativeSource={RelativeSource AncestorType=Window}, Mode=TwoWay}"
                      SelectedValuePath="."/>
        </StackPanel>


        <DataGrid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                  Margin="10"
                  ItemsSource="{Binding CallList}"
                  IsReadOnly="True"
                  AutoGenerateColumns="False"
                  EnableRowVirtualization="True"
                  RowDetailsVisibilityMode="VisibleWhenSelected"
                  SelectedItem="{Binding SelectedCall}">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id}" Header="Call ID" Width="Auto"/>
                <DataGridTextColumn Binding="{Binding TypeOfCall}" Header="Type of Call" Width="Auto"/>
                <DataGridTextColumn Binding="{Binding FullAddress}" Header="Address" Width="Auto"/>
                <DataGridTextColumn Binding="{Binding OpenTime, StringFormat='dd/MM/yyyy HH:mm'}" Header="Open Time" Width="Auto"/>
                <DataGridTextColumn Binding="{Binding MaxTimeToFinish, StringFormat='dd/MM/yyyy HH:mm'}" Header="Max Time to Finish" Width="Auto"/>
                <DataGridTextColumn Binding="{Binding Distance, StringFormat={}{0:F2}}" Header="Distance (km)" Width="Auto"/>

                <DataGridTemplateColumn Header="Action">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Choose Call" Click="Choose_click" CommandParameter="{Binding Id}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>

            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding VerbalDescription}"
                               TextWrapping="Wrap"
                               Margin="10"
                               FontSize="14"
                               FontStyle="Italic"
                               Foreground="DarkSlateGray"/>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>

        </DataGrid>
    </Grid>
</Window>