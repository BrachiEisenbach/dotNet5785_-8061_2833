<Window x:Class="PL.Call.ChooseCallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Call"
        mc:Ignorable="d"
        Title="ChooseCallWindow" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
    <!--<Window.Resources>
        <local:TupleConverter x:Key="TupleConverter"/>
    </Window.Resources>-->

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Label" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="0" />

            <ComboBox 
                      ItemsSource="{Binding Source={StaticResource TypeOfCallCollectionKey}}"
                      VerticalAlignment="Center"
                      Grid.Column="1"
                      SelectedItem="{Binding Type, RelativeSource={RelativeSource AncestorType=Window}, Mode=TwoWay}"                      
                      SelectedValuePath="."/>
        </Grid>
        <DataGrid Grid.Row="1"
          Margin="10"
          ItemsSource="{Binding Path=CallList}"
          IsReadOnly="True"
          AutoGenerateColumns="False"
          EnableRowVirtualization="True" 
          RowDetailsVisibilityMode="VisibleWhenSelected"
          SelectedItem="{Binding SelectedCall}"
          MouseLeftButtonUp="DataGrid_MouseLeftButtonUp">
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <EventSetter Event="PreviewMouseLeftButtonUp"
                         Handler="DataGridRow_PreviewMouseLeftButtonUp"/>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id}" Header="Call ID" Width="Auto">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Background" Value="Chocolate"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>

                </DataGridTextColumn>

                <DataGridTextColumn Binding="{Binding TypeOfCall}" Header="Type Of Call" Width="Auto"/>
                <DataGridTextColumn Binding="{Binding FullAddress}" Header="Full  Address" Width="Auto"/>
                <DataGridTextColumn Binding="{Binding OpenTime}" Header="Open Time" Width="Auto"/>
                <DataGridTextColumn Binding="{Binding MaxTimeToFinish}" Header="Max Time To Finish Name" Width="Auto"/>
                <DataGridTextColumn Binding="{Binding Distance}" Header="Distance" Width="Auto"/>
                <!--<DataGridTemplateColumn Header="" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="בחר"
        Command="{Binding ChooseCallCommand}">
                                <Button.CommandParameter>
                                    <MultiBinding Converter="{StaticResource TupleConverter}">
                                        <Binding Path="Id"/>
                                        <Binding Path="CallId"/>
                                    </MultiBinding>
                                </Button.CommandParameter>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>-->

                
            </DataGrid.Columns>

            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding VerbalDescription}" 
                       TextWrapping="Wrap" 
                       Margin="10"  
                       FontSize="14"
                       FontStyle="Italic"
                       Foreground="DarkSlateGray"/>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
            <Button Content="update address"
           Click="Updete_click"/>

        </DataGrid>

    </Grid>
</Window>
