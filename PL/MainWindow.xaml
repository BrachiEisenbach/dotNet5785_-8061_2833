<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="200" Width="400">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <Label Content="Enter ID:" Margin="0,0,0,5"/>
            
            <TextBox Width="200" Height="25" Margin="0,0,0,10">
                <TextBox.Text>
                    <Binding Path="Id" Mode="TwoWay" ValidatesOnExceptions="True" NotifyOnValidationError="True" UpdateSourceTrigger="PropertyChanged"/>
                </TextBox.Text>
            </TextBox>
            
            <Button Content="Submit" Width="100" Height="30" Click="SubmitButton_Click"/>
        </StackPanel>


    </Grid>
</Window>
