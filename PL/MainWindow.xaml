<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <!--External Grid-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="250*"/>
            <RowDefinition Height="250*"/>
        </Grid.RowDefinitions>

        <!--clockArea-->
        <Grid Height="auto" Grid.Row="0" Width="auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="{Binding CurrentTime}" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" Margin="0,25,0,0" VerticalAlignment="Top" Grid.Column="0" RenderTransformOrigin="0.159,1.81" Height="26" Width="92"/>
            <Button Content="Add One Minute" HorizontalAlignment="Center" Width="179" Margin="0,56,0,136" Click="btnAddOneMinute_Click"/>
            <Button Content="Add One Day" HorizontalAlignment="Center" Width="180" Margin="0,91,0,101"  Click="btnAddOneDay_Click"/>
            <Button Content="Add One Hour" HorizontalAlignment="Center" Width="179" Margin="0,123,0,69"  Click="btnAddOneHour_Click"/>
            <Button Content="Add One Month" HorizontalAlignment="Center" Width="179" Margin="0,156,0,36"  Click="btnAddOneMonth_Click"/>
            <Button Content="Add One Year" HorizontalAlignment="Center" Width="179" Margin="0,190,0,2"  Click="btnAddOneYear_Click"/>
            <Button Grid.Column="1" Content="Update" HorizontalAlignment="Left" Margin="295,102,0,0" VerticalAlignment="Top" Width="57" Height="24"/>
            <TextBox Grid.Column="1" HorizontalAlignment="Left" Margin="203,104,0,0" TextWrapping="Wrap" Text="RiskRange" VerticalAlignment="Top" Width="71" Height="19"/>
            <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="133,105,0,0" TextWrapping="Wrap" Text="Risk Range:" VerticalAlignment="Top" Width="66"/>
            <Button Grid.Column="1" Content="Update" HorizontalAlignment="Left" Margin="295,136,0,0" VerticalAlignment="Top" Width="57" Height="24" RenderTransformOrigin="0.46,2.123"/>
            <TextBox Grid.Column="1" HorizontalAlignment="Left" Margin="203,139,0,0" TextWrapping="Wrap" Text="Clock" VerticalAlignment="Top" Width="71" Height="19" RenderTransformOrigin="0.38,2.706"/>
            <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="135,139,0,0" TextWrapping="Wrap" Text="Clock:" VerticalAlignment="Top" Width="49"/>
        </Grid>
        <Button Content="Reset DB" HorizontalAlignment="Center" Margin="0,85,0,0" Grid.Row="1" VerticalAlignment="Top" Height="37" Width="104"/>
        <Button Content="Initialize DB" HorizontalAlignment="Center" Margin="0,27,0,0" Grid.Row="1" VerticalAlignment="Top" Height="37" Width="103" Click="Button_Click" />
        <Button Content="Volunteer List" HorizontalAlignment="Center" Margin="0,147,0,0" Grid.Row="1" VerticalAlignment="Top"  Height="37" Width="103"/>

    </Grid>
</Window>
